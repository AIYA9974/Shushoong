<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kh.mclass.shushoong.employee.model.repository.EmployeeRepository">
	<select id="selectAllList" resultType="EmployeeEntity">
		SELECT EMP_ID, EMP_NAME, EMP_NO, DEPT_CODE, JOB_CODE, SALARY 
		FROM EMPLOYEE
	</select>
	<select id="selectOne" resultType="EmployeeEntity" parameterType="int">
		SELECT BOARD_ID,SUBJECT,CONTENT,WRITE_TIME,LOG_IP,BOARD_WRITER,READ_COUNT    
		FROM BOARD WHERE BOARD_ID=#{boardId}
	</select>
	<update id="updateSalary"  parameterType="int">
		update employee set salary=#{salary} where emp_id=#{empId}
	</update>
	<delete id="delete"  parameterType="int">
		DELETE FROM EMPLOYEE WHERE EMP_ID=#{empId}
	</delete>
</mapper>